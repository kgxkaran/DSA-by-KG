class Solution {
public:
    bool checkXMatrix(vector<vector<int>>& grid) {

        int rows = grid.size();

        for(int i = 0; i < rows; i++){
            if(grid[i][i] == 0 || grid[i][rows - i - 1] == 0) return false;
            for(int j = 0; j < rows; j++){
                if(i == j || j == rows-i-1) continue;
                if(grid[i][j] != 0) return false;
            }
        }

        return true;
        
    }
};
