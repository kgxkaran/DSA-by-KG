class Solution {
public:
    int diagonalSum(vector<vector<int>>& mat) {
        int ans = 0;
        int rows = mat.size();
        int cols = mat[0].size();
        int n = min(rows,cols);

        for(int i = 0; i < n; i++){
            ans = ans + mat[i][i] + mat[i][cols - i - 1];
        }
        if(n % 2 == 1){
            ans = ans - mat[n/2][n/2];
        }

        return ans;
        
    }
};
