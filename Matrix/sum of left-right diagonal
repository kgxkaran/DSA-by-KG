int sumOfLeft(vector<vector<int>>&arr,int rows,int cols){
    int ans = 0;
    for(int i = 0; i < min(rows,cols); i++){
        ans+=arr[i][i];
    }
    return ans;
}
int sumOfRight(vector<vector<int>>&arr,int rows,int cols){
    int ans = 0;
    for(int i = 0; i < min(rows,cols); i++){
        ans+=arr[i][cols - i - 1];
    }
    return ans;
}

cout << "Sum of both diagonals are : " << sumOfRight(arr,rows,cols) + sumOfLeft(arr,rows,cols) << endl;
