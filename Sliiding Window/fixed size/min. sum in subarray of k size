#include<bits/stdc++.h>
using namespace std;
int minSum(int arr[] , int n , int k ){
    
    int sum = 0;
    int ans  = 0;
    
    for(int i = 0; i < k; i++){
        sum = sum + arr[i];
    }
    
    ans = sum;
    
    for(int i = k; i < n; i++){
        sum = sum + arr[i] - arr[i - k];
        ans = min(ans , sum);
    }
    
    return ans;
}

int main(){
    
    int arr[6] = {2,3,1,1,0,4};
    
    cout << minSum(arr , 6 , 3);
    
}
