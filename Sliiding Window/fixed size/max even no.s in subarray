#include<bits/stdc++.h>
using namespace std;
int maxEven(int arr[] , int n , int k ){
    
    int ans  = 0;
    int count = 0;
    
    for(int i = 0; i < k; i++){
        if(arr[i] % 2 == 0) ans++;
    }
    
    count = ans;
  
    for(int i = k; i < n; i++){
        if(arr[i] % 2 == 0)ans++;
        if(arr[i - k] % 2 == 0)ans--;
        count = max(count , ans);
    }
    
    return count;
}

int main(){
    
    int arr[6] = {2,3,1,8,6,4};
    
    cout << maxEven(arr , 6 , 3);
    
}
