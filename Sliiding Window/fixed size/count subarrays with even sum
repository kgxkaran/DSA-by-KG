int evenSum(int arr[], int n, int k){
    int count = 0;
    int sum = 0;

    // Pehle window ka sum nikal liya
    for(int i = 0; i < k; i++){
        sum += arr[i];
    }

    // Pehla sum even hai to count++
    if(sum % 2 == 0) count++;

    // Baaki windows ke liye
    for(int i = k; i < n; i++){
        sum = sum + arr[i] - arr[i - k];  // window slide
        if(sum % 2 == 0) count++;
    }

    return count;
}
