class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int profit = 0; int maxProfit = 0;
        int minsofar = prices[0];

        for(int i = 1; i < prices.size(); i++){
            if(prices[i] > minsofar){
                profit = prices[i] - minsofar;
                maxProfit = max(maxProfit , profit);
            }
            else{
                minsofar = prices[i];
            }
        }
        return maxProfit;
        
    }
};
